<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>ServletGet</display-name>

    <servlet>
        <servlet-name>orders</servlet-name>
        <servlet-class>org.example.OrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orders</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <display-name>ServletPost</display-name>

    <servlet>
        <servlet-name>orderspost</servlet-name>
        <servlet-class>org.example.PostOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderspost</servlet-name>
        <url-pattern>/orderspost</url-pattern>
    </servlet-mapping>
    <display-name>ServletPut</display-name>

    <servlet>
        <servlet-name>ordersput</servlet-name>
        <servlet-class>org.example.PutOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ordersput</servlet-name>
        <url-pattern>/ordersput</url-pattern>
    </servlet-mapping>
    <display-name>ServletDelete</display-name>
    <servlet>
        <servlet-name>ordersdelete</servlet-name>
        <servlet-class>org.example.DeleteOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ordersdelete</servlet-name>
        <url-pattern>/ordersdelete</url-pattern>
    </servlet-mapping>
</web-app>